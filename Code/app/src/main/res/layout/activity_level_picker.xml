<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.diragi.gameguess.LevelPicker">

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="1"
        android:id="@+id/one"
        android:onClick="levelPick"
        android:layout_alignTop="@+id/two"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="2"
        android:id="@+id/two"
        android:onClick="levelPick"
        android:layout_alignTop="@+id/three"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one" />

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="3"
        android:id="@+id/three"
        android:onClick="levelPick"
        android:layout_alignTop="@+id/four"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two" />

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="4"
        android:id="@+id/four"
        android:onClick="levelPick"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/five"
        android:layout_toStartOf="@+id/five" />

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="5"
        android:id="@+id/five"
        android:onClick="levelPick"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/six"
        android:layout_toStartOf="@+id/six" />

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="6"
        android:id="@+id/six"
        android:onClick="levelPick"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="7"
        android:id="@+id/seven"
        android:onClick="levelPick"
        android:layout_below="@+id/one"
        android:layout_alignLeft="@+id/one"
        android:layout_alignStart="@+id/one" />

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="8"
        android:id="@+id/eight"
        android:onClick="levelPick"
        android:layout_below="@+id/two"
        android:layout_alignLeft="@+id/two"
        android:layout_alignStart="@+id/two" />

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="9"
        android:id="@+id/nine"
        android:onClick="levelPick"
        android:layout_below="@+id/three"
        android:layout_alignLeft="@+id/three"
        android:layout_alignStart="@+id/three" />

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="10"
        android:id="@+id/ten"
        android:onClick="levelPick"
        android:layout_below="@+id/four"
        android:layout_alignLeft="@+id/four"
        android:layout_alignStart="@+id/four" />

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="11"
        android:id="@+id/eleven"
        android:onClick="levelPick"
        android:layout_below="@+id/five"
        android:layout_alignLeft="@+id/five"
        android:layout_alignStart="@+id/five" />

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="12"
        android:id="@+id/twelve"
        android:onClick="levelPick"
        android:layout_below="@+id/six"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
