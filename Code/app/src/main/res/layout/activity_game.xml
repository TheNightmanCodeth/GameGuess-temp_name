<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.diragi.gameguess.Game">

    <Button
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:text="A"
        android:id="@+id/buttonOne"
        android:onClick="checkAnswer"
        android:layout_above="@+id/buttonSeven"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:text="B"
        android:id="@+id/buttonTwo"
        android:layout_alignBottom="@+id/buttonOne"
        android:layout_toRightOf="@+id/buttonOne"
        android:layout_toEndOf="@+id/buttonOne"
        android:onClick="checkAnswer"/>

    <Button
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:text="C"
        android:id="@+id/buttonThree"
        android:layout_alignTop="@+id/buttonTwo"
        android:layout_toRightOf="@+id/buttonTwo"
        android:layout_toEndOf="@+id/buttonTwo"
        android:onClick="checkAnswer"/>

    <Button
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:text="B"
        android:id="@+id/buttonFour"
        android:layout_alignBottom="@+id/buttonThree"
        android:layout_toRightOf="@+id/buttonThree"
        android:layout_toEndOf="@+id/buttonThree"
        android:onClick="checkAnswer"/>

    <Button
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:text="B"
        android:id="@+id/buttonFive"
        android:layout_alignBottom="@+id/buttonFour"
        android:layout_toRightOf="@+id/buttonFour"
        android:layout_toEndOf="@+id/buttonFour"
        android:onClick="checkAnswer"/>

    <Button
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:text="B"
        android:id="@+id/buttonSix"
        android:layout_alignBottom="@+id/buttonFive"
        android:layout_toRightOf="@+id/buttonFive"
        android:layout_toEndOf="@+id/buttonFive"
        android:onClick="checkAnswer"/>

    <Button
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:text="A"
        android:id="@+id/buttonSeven"
        android:onClick="checkAnswer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:text="B"
        android:id="@+id/buttonEight"
        android:onClick="checkAnswer"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/buttonTwelve"
        android:layout_toStartOf="@+id/buttonTwelve" />

    <Button
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:text="B"
        android:id="@+id/buttonNine"
        android:onClick="checkAnswer"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonThree"
        android:layout_toEndOf="@+id/buttonThree" />

    <Button
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:text="B"
        android:id="@+id/buttonTen"
        android:onClick="checkAnswer"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonSeven"
        android:layout_toEndOf="@+id/buttonSeven" />

    <Button
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:text="B"
        android:id="@+id/buttonEleven"
        android:onClick="checkAnswer"
        android:layout_alignTop="@+id/buttonTen"
        android:layout_toLeftOf="@+id/buttonNine"
        android:layout_toStartOf="@+id/buttonNine" />

    <Button
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:text="B"
        android:id="@+id/buttonTwelve"
        android:onClick="checkAnswer"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/buttonSix"
        android:layout_alignStart="@+id/buttonSix" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/answerTextView"
        android:layout_above="@+id/buttonTwo"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:adjustViewBounds="true"
        android:layout_above="@+id/answerTextView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
